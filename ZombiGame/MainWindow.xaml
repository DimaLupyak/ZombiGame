<Window x:Class="ZombiGame.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ZombiGame"
        mc:Ignorable="d"
        Title="Monster War" Height="350" Width="525" WindowState="Maximized">
    <Grid>
        <ItemsControl  ItemsSource="{Binding Path=Persons,Mode=TwoWay}">
            <ItemsControl.ItemTemplate>
                <DataTemplate >
                    <Rectangle Stroke="Black" Height="100" Width="100" HorizontalAlignment="Center" VerticalAlignment="Center">
                    </Rectangle>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>
    </Grid>
</Window>
